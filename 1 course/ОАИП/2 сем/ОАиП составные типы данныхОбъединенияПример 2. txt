#include <stdio.h>
#include <stdarg.h>
#include <conio.h>
/*В структуре храниться имя фигуры, в ней (в структуре) объединение, в котором хранятся параметры фигуры (радиус окружности, длины прямоугольника). Для введенного типа фигуры рассчитать площадь.
 
Исходными данными являются тип фигуры (окружность или прямоугольник) и параметры фигуры(радиус, длинна и ширина). Необходимо организовать работу с объединением для уменьшения объема выделяемой памяти
*/
struct figure
{char fig;
 double area;
 union
 {
 struct
  {double x, y;
  }p;
  struct
  {double r;
  }o;
 }u;
};
void main()
{
figure f;
printf("Введите вид фигуры :p-прямоуг., o-окружность ");
 scanf("%c",&f.fig);
 switch(f.fig)
 {case 'p':
 printf("Введите размеры прямогольника: длина, ширина\n");
   scanf("%lf%lf",&f.u.p.x,&f.u.p.y);
   f.area=f.u.p.x*f.u.p.y;
   printf("Площадь прямоугольника= %lf\n",f.area);
   break;
  case 'o':
   printf("Введите радиус окружности \n");
   scanf("%lf",&f.u.o.r);
   f.area=3.14*f.u.o.r*f.u.o.r;
   printf("Площадь круга= %lf.\n",f.area);
   break;
 }
}
